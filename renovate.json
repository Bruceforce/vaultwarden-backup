{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        "customManagers:dockerfileVersions"
    ],
    "packageRules": [
        {
            "description": "Use fix as commit type for Image updates and allow automerge",
            "matchUpdateTypes": [
                "major",
                "minor",
                "patch"
            ],
            "matchManagers": [
                "dockerfile",
                "docker-compose"
            ],
            "semanticCommitType": "fix",
            "automerge": true
        }
    ]
}
